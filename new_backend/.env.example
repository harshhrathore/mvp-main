# ═══════════════════════════════════════════════════════
# SAMAA BACKEND ENVIRONMENT VARIABLES
# ═══════════════════════════════════════════════════════

# ── DATABASE ─────────────────────────────────────────── 
DATABASE_URL=postgresql://user:password@host:5432/dbname

# ── AUTH ─────────────────────────────────────────────── 
JWT_SECRET=your_32_char_secret_here_replace_this
JWT_EXPIRES_IN=7d

# ── SERVER ───────────────────────────────────────────── 
PORT=5000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ── PYTHON DOSHA SERVICE ─────────────────────────────── 
# FastAPI microservice for dosha calculation
DOSHA_SERVICE_URL=http://localhost:8000
DOSHA_SERVICE_TIMEOUT=10000

# ── AI / LLM ─────────────────────────────────────────── 
# For open-source LLM (Ollama, LM Studio, etc.)
AI_SERVICE_TYPE=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Alternative: OpenAI (if using paid service)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# ── SPEECH-TO-TEXT (STT) ─────────────────────────────── 
# Use 'mock' for development, 'openai' or 'google' for production
STT_SERVICE=mock
OPENAI_WHISPER_API_KEY=
GOOGLE_APPLICATION_CREDENTIALS=

# ── TEXT-TO-SPEECH (TTS) ─────────────────────────────── 
# Use 'mock' for development, 'elevenlabs' for production
TTS_SERVICE=mock
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# ── EMOTION ANALYSIS ─────────────────────────────────── 
# BERT-based emotion detection API (optional)
EMOTION_SERVICE=mock
BERT_API_URL=
BERT_API_KEY=

# ── FILE UPLOAD / STORAGE ────────────────────────────── 
# Cloudinary for profile pictures and media
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ── MONITORING / ERROR TRACKING ──────────────────────── 
SENTRY_DSN=

# ── RATE LIMITING ────────────────────────────────────── 
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ── FEATURE FLAGS ────────────────────────────────────── 
ENABLE_EMAIL_VERIFICATION=false
ENABLE_CRISIS_DETECTION=true
ENABLE_RECOMMENDATIONS=true