# ═══════════════════════════════════════════════════════
# SAMAA FRONTEND ENVIRONMENT VARIABLES
# ═══════════════════════════════════════════════════════

# ── API CONFIGURATION ────────────────────────────────── 
VITE_API_BASE_URL=http://localhost:5000
VITE_API_TIMEOUT=30000

# ── ENVIRONMENT ──────────────────────────────────────── 
VITE_APP_ENV=development
VITE_APP_NAME=SAMAA Wellness
VITE_APP_VERSION=1.0.0

# ── FEATURE FLAGS ────────────────────────────────────── 
# Enable/disable features during development
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_VOICE_INPUT=true
VITE_ENABLE_DOSHA_QUIZ=true
VITE_ENABLE_BREATHING_EXERCISES=true
VITE_ENABLE_ANALYTICS=true

# ── VOICE RECORDING ──────────────────────────────────── 
VITE_MAX_RECORDING_DURATION=30000
VITE_AUDIO_MIME_TYPE=auto

# ── DEBUG / LOGGING ──────────────────────────────────── 
VITE_ENABLE_DEBUG_LOGS=true
VITE_SHOW_API_ERRORS=true

# ── STORAGE ──────────────────────────────────────────── 
VITE_LOCAL_STORAGE_PREFIX=samaa:
